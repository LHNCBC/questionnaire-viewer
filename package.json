{
  "name": "questionnaire-viewer",
  "version": "0.6.1",
  "description": "A website for rendering a FHIR Questionnaire using the LHC-Forms widget",
  "config": {
    "testServerPort": 4029,
    "testAppPort": 4030
  },
  "scripts": {
    "************** Intended for CLI use": "**************************************************************",
    "test": "start-server-and-test start-dist http://localhost:$npm_package_config_testServerPort cy:run",
    "build": "rimraf docs && PARCEL_WORKER_BACKEND=process parcel build --dist-dir docs --public-url '.' source/index.html && npm run build:copy-google-site-verification",
    "build:copy-google-site-verification": "cp source/googleecb8763e4897dca6.html docs",
    "start": "npm run start:note; start-server-and-test start:app http://localhost:$npm_package_config_testAppPort start:data",
    "start-dist": "start-server-and-test start-dist:app http://localhost:$npm_package_config_testAppPort start:data",
    "cy:open": "cypress open --project test",
    "cy:run": "cypress run --project test",
    "************** Not intended for CLI use (supporting scripts)": "*************************************",
    "start:data": "http-server -d false -s -p $npm_package_config_testServerPort -c-1 test/data -P http://localhost:$npm_package_config_testAppPort",
    "start:app": "parcel serve --dist-dir debugging source/index.html -p $npm_package_config_testAppPort",
    "start:note": "echo Warning:  Parcel serves the app on any URL, so some tests will fail if run against that server.  Use start-dist for tests.",
    "start-dist:app": "http-server -s -p $npm_package_config_testAppPort -c-1 docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lhncbc/questionnaire-viewer.git"
  },
  "keywords": [
    "FHIR"
  ],
  "author": "wangye@nih.gov",
  "license": "MIT",
  "aliasComment": "alias is used below to prevent Parcel from adding a polyfill for 'process'",
  "alias": {
    "process": false
  },
  "devDependencies": {
    "cypress": "^13.6.6",
    "http-server": "^14.1.1",
    "jasmine-spec-reporter": "^4.2.1",
    "parcel": "^2.8.3",
    "process": "^0.11.10",
    "rimraf": "^5.0.0",
    "start-server-and-test": "^2.0.0"
  },
  "dependencies": {
    "fhirclient": "^2.3.10",
    "js-untar-lhc": "^2.1.1",
    "lforms-loader": "^3.1.2",
    "lforms-updater": "^30.0.0",
    "pako": "^1.0.11",
    "string-to-arraybuffer": "^1.0.2",
    "url-parse": "^1.5.3",
    "whatwg-fetch": "^3.0.0"
  }
}
